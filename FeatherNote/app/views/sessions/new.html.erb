<div class="user-form">
  <h2 class="form-header">Sign in</h2>
  <form class="new-form" action="<%= session_url %>" method="post">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

    <div class="input-field">
      <label>Username:
        <input type="text" name="user[username]" value="" autofocus>
      </label>
    </div>

    <div class="input-field">
      <label>Password:
        <input type="password" name="user[password]" value="">
      </label>
    </div>

    <button class="form-button">Sign In</button>
  </form>

  <% if flash[:errors] %>
    <div class="error-msgs">
      <% flash[:errors].each do |error| %>
        <p><%= error %></p>
      <% end %>
    </div>
  <% end %>

  <!-- These will render new React components on click -->
  <div class="sign-in-msg">
    <p>Don't have an account?<p>
    <a href="">Create account</a>
  </div>
</div>
